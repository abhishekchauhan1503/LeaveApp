<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.bytecode.use_reflection_optimizer">false</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">nakhrali</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/LeaveApplication</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="use_sql_comments">true</property>

		<mapping class="com.abhishek.leaveapplication.model.Role" />
		<mapping class="com.abhishek.leaveapplication.model.User" />
		<mapping class="com.abhishek.leaveapplication.model.Application" />
		<mapping class="com.abhishek.leaveapplication.model.Message" />
	</session-factory>
</hibernate-configuration>
